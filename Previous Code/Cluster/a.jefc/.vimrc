set nocompatible
syntax enable
set bg=dark 
filetype plugin on
set path+=**
set wildmenu
set mouse=a 
let g:netrw_banner=0        " disable annoying banner
let g:netrw_browse_split=4  " open in prior window
let g:netrw_altv=1          " open splits to the right
let g:netrw_liststyle=3     " tree view
set cursorline
"set colorcolumn=80
"set cursorcolumn
nnoremap l :set number!<CR>
set laststatus=2

